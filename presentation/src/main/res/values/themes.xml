<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LogManagement" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_3</item>
        <item name="colorSecondaryVariant">@color/primary_3</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->
        <!-- Snackbar style. -->
        <item name="snackbarStyle">@style/Widget.SnackBar</item>
    </style>

    <style name="Theme.LogManagement" parent="Base.Theme.LogManagement" />

    <style name="pageLargeHint" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/normalText</item>
    </style>
    ///////////////////////////////////////////////////////////////////////////////////////////////
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/headingText</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>
    ////////////////////////////////////////////////////////////////////////////////////////////////////
    <style name="inputText">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/largeText</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:singleLine">true</item>
    </style>

    ////////////////////////////////////////////////////////////////////////////////////////////////////
    <!--Active Button Theme-->
    <style name="ThemeOverlay.Widget.customButton.active" parent="">
        <item name="android:textAppearanceButton">@style/TextAppearance.customButton.active</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:indeterminateTint">@color/white</item>
    </style>

    <!--Passive Button Theme-->
    <style name="ThemeOverlay.Widget.customButton.passive" parent="">
        <item name="android:textAppearanceButton">@style/TextAppearance.customButton.passive</item>
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

    <!--The base text appearance for all buttons-->
    <style name="TextAppearance.Body.White" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/headingText</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Text styling for active button, with selector-->
    <style name="TextAppearance.customButton.active" parent="@style/TextAppearance.Body.White">
        <item name="android:textColor">@color/active_button_text_selector</item>
    </style>

    <!--Text styling for passive button, with selector-->
    <style name="TextAppearance.customButton.passive" parent="@style/TextAppearance.Body.White">
        <item name="android:textColor">@color/active_button_background_selector</item>
    </style>

    <style name="Widget.customButton.active" parent="">
        <item name="android:theme">@style/ThemeOverlay.Widget.customButton.active</item>
        <item name="android:background">@drawable/active_button_bg</item>
        <item name="android:height">60dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.customButton.passive" parent="">
        <item name="android:theme">@style/ThemeOverlay.Widget.customButton.passive</item>
        <item name="android:background">@drawable/passive_button_bg</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Widget.SnackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">0dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>


    <style name="question_tag" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:background">@drawable/tag_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/image_corner</item>
        <item name="cornerSizeBottomRight">@dimen/image_corner</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="image_corner_all" parent="">
        <item name="cornerSizeTopRight">@dimen/half_margin</item>
        <item name="cornerSizeTopLeft">@dimen/half_margin</item>
        <item name="cornerSizeBottomLeft">@dimen/half_margin</item>
        <item name="cornerSizeBottomRight">@dimen/half_margin</item>

    </style>

    <style name="bottom_sheet_style" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>
    <style name="BottomSheetStyle">
        <item name="android:background">@drawable/bg_sheet</item>
    </style>


    <style name="CustomDatePickerDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:textColorSecondaryInverse">@color/primary_4</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:colorControlActivated">@color/primary_3</item>
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
        <item name="android:colorControlHighlight">@color/primary_3</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/date_picker_button_Style</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/date_picker_button_Style</item>
    </style>

    <style name="CustomDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/colorSecondary</item>
        <item name="android:calendarTextColor">@color/colorPrimaryVariant</item>
        <item name="android:dayOfWeekBackground">@color/primary_4</item>
        <item name="android:yearListSelectorColor">@color/secondary_dark</item>
        <item name="android:datePickerMode">calendar</item>
    </style>
    <style name="date_picker_button_Style" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_5</item>
    </style>

    <style name="reset_button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_4</item>
        <item name="android:paddingRight">@dimen/_16sdp</item>
        <item name="android:paddingLeft">@dimen/_16sdp</item>
        <item name="android:paddingEnd">@dimen/_16sdp</item>
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/reset</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:drawableRight">@drawable/ic_reset</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="work_log_label" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/input_background_deactivate</item>
        <item name="android:backgroundTint">@color/green_secondary</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="them_spinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="overlapAnchor">true</item>
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

</resources>