<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomInputText">
        <attr name="textColor" format="color" />
        <attr name="text" format="string" />
        <attr name="hint" format="string" />
        <attr name="length" format="integer" />
        <attr name="hintTextColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="iconDrawable" format="reference" />
        <attr name="isFocusable" format="boolean" />
        <attr name="type" format="enum">
            <enum name="email" value="0" />
            <enum name="password" value="1" />
            <enum name="number" value="2" />
            <enum name="multiline" value="3" />
            <enum name="person" value="4" />
        </attr>
    </declare-styleable>


    <declare-styleable name="CustomButton">
        <attr name="button_text_color" format="color" />
        <attr name="buttonText" format="string" />
        <attr name="buttonEnable" format="boolean" />
        <attr name="buttonLoading" format="boolean" />
        <attr name="buttonTextSize" format="dimension" />
        <attr name="buttonType" format="enum">
            <enum name="normalButton" value="0" />
            <enum name="strokeButtonDeactivate" value="1" />
            <enum name="strokeButtonActive" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="CustomAddImageAsset">
        <attr name="image_title" format="string" />
        <attr name="buttonImageType" format="enum">
            <enum name="normal" value="0" />
            <enum name="other" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ModalSpinner">
        <attr name="spinner_hint" format="string" />
    </declare-styleable>

    <declare-styleable name="UpDownCounter">
        <attr name="title" format="string"/>
        <attr name="steps" format="integer"/>
        <attr name="maxValue" format="integer"/>
        <attr name="minValue" format="integer"/>
    </declare-styleable>
    <declare-styleable name="CustomCompressSeekBar">
        <attr name="compress_type" format="enum">
            <enum name="attachment" value="0" />
            <enum name="panorama" value="1" />
        </attr>
    </declare-styleable>
</resources>